<style>
  .artist-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .artist-card {
    flex: 0 0 auto;
    text-align: center;
  }
</style>

<div class="artist-container" id="artist-container">
  {{#each artists}}
    <div class="artist-card" style="display:none;">
      <h2>{{name}}</h2>
      <img src="{{images.[0].url}}" alt="{{name}}" style="width:100px; height:100px">
      <a href="/albums/{{id}}">View Albums</a>
    </div>
  {{/each}}
  <button id="show-more" style="display:none;">Show More</button>
</div>

<script>window.onload = function() {
  var artistCards = document.getElementsByClassName("artist-card");
  var showMoreButton = document.getElementById("show-more");

  if (artistCards.length > 5) {
    showMoreButton.style.display = "block";

    for (var i = 0; i < 5; i++) {
      artistCards[i].style.display = "block";
    }
  } else {
    for (var i = 0; i < artistCards.length; i++) {
      artistCards[i].style.display = "block";
    }
  }

  showMoreButton.addEventListener("click", function() {
    for (var i = 5; i < artistCards.length; i++) {
      artistCards[i].style.display = "block";
    }
    showMoreButton.style.display = "none";
  });
}</script>

